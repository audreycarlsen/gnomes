  <%= form_for(@post) do |f| %>
    <% if @post.errors.any? %>
      <% @post.errors.full_messages.each do |msg| %>
        <%= msg %>
      <% end %>
    <% end %>

    <p>
      <div class="field">
        <%= f.label :title %> <br>
        <%= f.text_field :title %>
      </div>
    </p>
    <p>
      <div class="field">
       <%= f.label :content %> <br>
       <%= f.text_area :content, rows:"10", cols:"30" %>
      </div>
    </p>
    <div class="button">
      <%= f.submit %>
    </div>
  <% end %>