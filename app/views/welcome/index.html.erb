<div class="ui inverted page grid masthead segment">
  <div class="column">

    <img src="gnome.png" class="ui large image">
    <div class="ui hidden transition information">
      <div class="ui inverted basic right floated segment">RIGHT NOW:
        <%= @weather.current.temperature.f %>&deg<br>
        <%= image_tag "http://icons.wxug.com/i/c/i/#{@weather.current.icon}.gif", size: "30"  %><br><br>
        <table>
          <thead>
            <tr>
              <% forecast.each do |day| %>
              <th><%= day.strftime("%b %e") %></th>
              <% end %>
            </tr>
          </thead>
          <tbody>
            <tr>
             <% @weather.forecast.first(5).each do |day| %>
             <td><%= image_tag "http://icons.wxug.com/i/c/i/#{day.icon}.gif", size: "30"  %> </td>
             <% end %>
           </tr>
           <tr>
            <% @weather.forecast.first(5).each do |day| %>
            <td><strong><%= day.high.f %>&deg</strong>/
              <%= day.low.f %>&deg</td>
              <% end %>
            </tr>
          </tbody>
        </table></div>
        <h1 class="ui inverted header">
          Gnome Sweet Gnome
        </h1>
        <p>Our community garden description?</p>

        <div class="large basic inverted animated fade ui button">
          <div class="visible content">Come plant some plants</div>
          <div class="hidden content">
            <% if current_user %>
            <%= link_to "Sign out", sign_out_path %>
            <% else %>
            <%= link_to "Sign In with Twitter", sign_in_path%>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>

<div id="news">
 <div class="ui page grid overview segment">
    <div class="ui two wide column"></div>
    <div class="twelve wide column">
      <div class="ui three column center aligned stackable divided grid">
         <%= render :template => "posts/index" %>
      </div>
    </div>
</div>
</div>



